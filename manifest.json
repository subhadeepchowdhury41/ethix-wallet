{
  "version": "1.0.0",
  "manifest_version": 3,
  "name": "Ethix Wallet",
  "description": "Chrome extension to connect you to Ethereum blockchain",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://*/",
    "https://*/"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Ethix Wallet",
    "default_icon": "assets/logo.png"
  }
}